def do_help(DB, options, args):
    """ Display more help about a command
    """
    print " Not Implemented"
    sys.exit()


if __name__ == "__main__":
    (parser, options, args) = cmd_options()

    if not args:
        show_help()
        sys.exit()

    from oasis.lib import DB

    if args[0] == 'help':
        do_help(DB, options=options, args=args)
        sys.exit()

    if args[0] == 'migrate':
        do_migrate(DB, options=options, args=args)
        sys.exit()

    if args[0] == 'init':
        do_init(DB, options=options)
        sys.exit()

    if args[0] == 'upgrade':
        do_upgrade(DB, options=options)
        sys.exit()

    if args[0] == 'show':
        do_show(DB, options, args)
        sys.exit()

    if args[0] == 'status':
        do_status(DB, options, args)
        sys.exit()

    if args[0] == 'resetpw':
        generate_admin_passwd(DB)
        sys.exit()

    show_help()


