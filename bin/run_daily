#!/usr/bin/python2.7


import sys, os

# we should be SOMETHING/bin/reset_admin_password, find APPDIR
# and add "SOMETHING/src" to our path

APPDIR = os.path.join(os.path.dirname(os.path.dirname(os.path.realpath(__file__))), "src")
sys.path.append(APPDIR)


from oasis.lib import Stats, Feeds

print "Running daily stats update."
Stats.do_daily_stats_update()

print "Running daily feeds"
feeds = Feeds.active_daily()
for feed in feeds:
    print "-", feed.name
    feed.run()

