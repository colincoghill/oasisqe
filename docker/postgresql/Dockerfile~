FROM alpine:3.7

RUN apk update && \
    apk add libpq postgresql-client postgresql postgresql-contrib<=9.7 && \
    rm -rf /var/cache/apk/*

ENV LANG en_US.utf8
ENV PGDATA /var/lib/postgresql/data

VOLUME /var/lib/postgresql/data

COPY start.sh /

ENTRYPOINT ["/start.sh"]

EXPOSE 5432
CMD ["postgres"]
